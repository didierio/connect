{% extends '@DidierWebsite/AccessToken/layout.html.twig' %}

{% block title %}
    {{ parent() }}
    <span class="mdl-color-text--grey-300">/</span>
    {{ accessToken.token }}
{% endblock %}

{% block content %}
    <div class="mdl-cell mdl-cell--12-col">
        <table class="mdl-data-table mdl-shadow--2dp">
            <tbody>
                <tr>
                    <td class="mdl-data-table__cell--non-numeric">#</td>
                    <td>{{ accessToken.id }}</td>
                </tr>
                <tr>
                    <td class="mdl-data-table__cell--non-numeric">Token</td>
                    <td>{{ accessToken.token }}</td>
                </tr>
                <tr>
                    <td class="mdl-data-table__cell--non-numeric">Expires at</td>
                    <td>{{ accessToken.expiresAt|date }}</td>
                </tr>
                <tr>
                    <td class="mdl-data-table__cell--non-numeric">Expired?</td>
                    <td>{{ now.format('U') > accessToken.expiresAt ? 'yes' : 'no' }}</td>
                </tr>
                <tr>
                    <td class="mdl-data-table__cell--non-numeric">Description</td>
                    <td>{{ accessToken.description }}</td>
                </tr>
                <tr>
                    <td class="mdl-data-table__cell--non-numeric">Scope</td>
                    <td>{{ accessToken.scope }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="mdl-button--floating-action">
        {% if now.format('U') < accessToken.expiresAt %}
            <a href="{{ path('didier_website_access_token_revoke', {id: accessToken.id}) }}" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored mdl-color-text--white">
                <i class="material-icons">not_interested</i>
            </a>
        {% endif %}

        <a href="{{ path('didier_website_access_token_edit', {id: accessToken.id}) }}" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored mdl-color-text--white">
            <i class="material-icons">edit</i>
        </a>
    </div>
{% endblock %}
