{% extends '@DidierWebsite/Client/layout.html.twig' %}

{% block content %}
    <div class="mdl-cell mdl-cell--12-col">
        <table class="mdl-data-table mdl-shadow--2dp">
            <thead>
                <tr>
                    <th>#</th>
                    <th>name</th>
                    <th>id</th>
                </tr>
            </thead>
            <tbody>
                {% for client in clients %}
                    <tr>
                        <td>
                            <a href="{{ path('didier_website_client_show', {id: client.id}) }}">{{ client.id }}</a>
                        </td>
                        <td>{{ client.name }}</td>
                        <td>{{ client.randomId }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('didier_website_client_create') }}" class="mdl-button mdl-button--floating-action mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored mdl-color-text--white">
        <i class="material-icons">add</i>
    </a>
{% endblock %}
