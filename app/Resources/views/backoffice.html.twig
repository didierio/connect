<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    <title>Connect BO</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.cyan-light_blue.min.css">
    <link rel="stylesheet" href="{{ asset('bundles/didierwebsite/css/backoffice.css') }}">
  </head>
  <body>
    <div class="demo-layout mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header">
      <header class="demo-header mdl-layout__header mdl-color--grey-100 mdl-color-text--grey-600">
        <div class="mdl-layout__header-row">
          <span class="mdl-layout-title">Connect <span class="mdl-color-text--grey-300">/</span> {% block title '' %}</span>
        </div>
      </header>
      <div class="demo-drawer mdl-layout__drawer mdl-color--blue-grey-900 mdl-color-text--blue-grey-50">
        <header class="demo-drawer-header">
          <div class="demo-avatar-dropdown">
            <img src="https://www.gravatar.com/avatar/{{ app.user.gravatar }}" class="demo-avatar">
            <span>{{ app.user.username }}</span>
            <div class="mdl-layout-spacer"></div>
              <a class="mdl-color-text--blue-grey" href="{{ path('didier_website_logout') }}">
                <i class="material-icons" role="presentation">power_settings_new</i>
                <span class="visuallyhidden">Logout</span>
              </a>
          </div>
        </header>
        <nav class="demo-navigation mdl-navigation mdl-color--blue-grey-800">
          <a class="mdl-navigation__link" href="{{ path('didier_website_home') }}"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">home</i>Home</a>
          <a class="mdl-navigation__link" href="{{ path('didier_website_client_list') }}"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">apps</i>Clients</a>
          <a class="mdl-navigation__link" href="{{ path('didier_website_access_token_list') }}"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">fingerprint</i>Access tokens</a>
          <a class="mdl-navigation__link" href="{{ path('didier_user_security_profile') }}"><i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">account_circle</i>Profile</a>

          {% if backoffice_section == 'profile' %}
            <nav class="mdl-navigation mdl-color--blue-grey-900 mdl-color-text--blue-grey-50">
              <a class="mdl-navigation__link" href="{{ path('didier_user_security_profile') }}">General information</a>
              <a class="mdl-navigation__link" href="{{ path('didier_user_security_profile_password') }}">Password</a>
            </nav>
          {% endif %}
        </nav>
      </div>
      <main class="mdl-layout__content mdl-color--grey-100">
        <div class="mdl-grid content">
          {% block content '' %}
        </div>
      </main>
    </div>

    <script src="https://code.getmdl.io/1.3.0/material.min.js"></script>

    <div id="toaster" class="mdl-js-snackbar mdl-snackbar">
      <div class="mdl-snackbar__text"></div>
      <button class="mdl-snackbar__action" type="button"></button>
    </div>

    <script>
      {% set flashes = app.session.flashbag.all %}

      {% if  flashes | length > 0 %}
        window.onload = function () {
          var snackbarContainer = document.querySelector('#toaster');

          {% for type, messages in flashes %}
            {% for message in messages %}
              snackbarContainer.MaterialSnackbar.showSnackbar({
                message: "{{ message | raw | e('js') }}",
                timeout: 5000,
              });
            {% endfor %}
          {% endfor %}
        };
      {% endif %}
    </script>
  </body>
</html>
